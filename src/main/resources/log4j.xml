<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	debug="false">

	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<param name="Target" value="System.out" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%5p %d{ISO8601} [%t][%x] %l -  %m%n" />
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="levelMin" value="TRACE" />
			<param name="levelMax" value="FATAL" />
		</filter>
	</appender>

	<appender name="AppLog" class="org.apache.log4j.RollingFileAppender">
		<!-- The active file to log to -->
		<param name="file" value="logs/mapimap.log" />
		<param name="append" value="true" />
		<param name="maxBackupIndex" value="5" />
		<layout class="org.apache.log4j.PatternLayout">
			<!-- The log message pattern -->
			<param name="ConversionPattern" value="%5p %d{ISO8601} [%t][%x] %c - %m%n" />
		</layout>
	</appender>

	<!-- Loggers to filter out various class paths -->

	<logger name="de.piratech">
		<level value="info" />
	</logger>

	<root>
		<level value="info" />
		<appender-ref ref="AppLog" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>